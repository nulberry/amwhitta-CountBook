<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amwhitta_countbook.MainActivity">

    <TextView
        android:id="@+id/textViewYourCounters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/listViewCounters" />

    <ListView
        android:layout_width="354dp"
        android:layout_height="326dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/listViewCounters"
        app:layout_constraintBottom_toTopOf="@+id/textViewNumCounters"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewYourCounters" />

    <TextView
        android:id="@+id/textViewNumCounters"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:text="@string/number_of_counters"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumCounters"
        app:layout_constraintTop_toBottomOf="@+id/listViewCounters"
        app:layout_constraintRight_toLeftOf="@+id/buttonNewCounter" />

    <EditText
        android:id="@+id/editTextNumCounters"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumCounters"
        app:layout_constraintRight_toLeftOf="@+id/buttonNewCounter" />

    <Button
        android:id="@+id/buttonNewCounter"
        android:layout_width="143dp"
        android:layout_height="98dp"
        android:text="@string/new_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editTextNumCounters"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewCounters" />

</android.support.constraint.ConstraintLayout>
